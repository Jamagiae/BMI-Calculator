        <TextBlock HorizontalAlignment="Left" Margin="46,238,0,0" TextWrapping="Wrap" Text="Weight Lbs." VerticalAlignment="Top"/>
        <TextBox x:Name="LN" HorizontalAlignment="Left" Height="23" Margin="167,77,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="FN" HorizontalAlignment="Left" Height="23" Margin="167,117,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PN" HorizontalAlignment="Left" Height="23" Margin="167,154,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
